<style>
  .mobile-menu {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.3s;

    @media (width > 64rem) {
      display: none;
    }

    &.active {
      grid-template-rows: 1fr;
      position: relative;
      box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.05);

      &::before {
        content: "";
        border-style: solid;
        border-color: transparent transparent #fff;
        border-width: 0 calc(20px / 2) 10px;
        position: absolute;
        top: -10px;
        right: 34px;
      }
    }

    > div {
      overflow: hidden;

      > nav {
        padding: 0 1.25rem;

        li {
          padding: 1.25rem 0;
          border-bottom: 1px rgba(0, 0, 0, 0.1) solid;

          a {
            font-size: 1.25rem;
          }
        }
      }

      > div {
        display: grid;
        justify-items: center;
        text-align: center;
        padding: 1.25rem;

        p {
          font-size: 0.938rem;
        }

        a {
          display: flex;
          gap: 4px;
          font-size: 1.25rem;
          font-weight: 700;
        }
      }
    }
  }
</style>
